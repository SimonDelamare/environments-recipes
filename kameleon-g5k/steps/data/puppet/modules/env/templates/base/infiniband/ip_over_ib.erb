#!/bin/sh

set -e

if [ "$IFACE" != "ib0" ]; then
    exit 0
fi

SHORTNAME=$(hostname -s)

<% if scope.function_versioncmp([@operatingsystemrelease,'8.0']) >= 0 %>
/bin/systemctl restart openibd
<% else %>
/etc/init.d/openibd restart
<% end %>
/sbin/ifconfig "$IFACE" $(gethostip -d "$SHORTNAME-$IFACE") netmask 255.255.240.0 up
